@model IEnumerable<Projeto_Lab4.Models.Inquilino>
@{
    ViewBag.Title = "Gerir Inquiilinos";
}

<h2>Gerir Inquiilinos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_de_Telemovel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cartao_de_Cidadao)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_Nascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_de_Telemovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cartao_de_Cidadao)
        </td>
        <td>
            @if (item.Estado != 2)
            {
                <a href='@Url.Action("BloquearUtilizador", "AdministracaoUtilizadores", new { id = item.ID_Inquilino })'>
                    <button type="button" class="btn btn-danger btn-cons">Bloquear inquilino</button>
                </a>
            }

            @if (item.Estado == 2)
            {
                <a href='@Url.Action("DesloquearUtilizador", "AdministracaoUtilizadores", new { id = item.ID_Inquilino })'>
                    <button type="button" class="btn btn-success">Desbloquear Utilizador</button>
                </a>
            }
        </td>
    </tr>
}

</table>

