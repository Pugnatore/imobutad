@model Projeto_Lab4.Models.BloqueiaInqulino

@{
    ViewBag.Title = "BloquearUtilizador";
}

<br />
<br />

@if (TempData["Bloqueio"] != null)
{
    <br />
    <br />
    <p style="font-weight:bold;color:red;">@TempData["Bloqueio"]</p>
}

<h2>Bloquear Utilizador</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
     

        <div class="form-group">
            <h3>Por favor indique em poucas palavras o motivo do bloqueio</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Motivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Motivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar Bloqueio" class="btn btn-danger btn-cons" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
