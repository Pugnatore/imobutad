@model IEnumerable<Projeto_Lab4.Models.Proprietario>

@{
    ViewBag.Title = "Gerir Proprietarios";
}

<h2>Gerir Proprietarios</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_de_Registo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_de_Telemovel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cartao_de_Cidadao)
        </th>
        <th>

        </th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_de_Registo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_Nascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_de_Telemovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cartao_de_Cidadao)
        </td>
        <td>
            @if (item.Estado != 2)
            {
                <a href='@Url.Action("BloquearUtilizadorprop", "AdministracaoUtilizadores", new { id = item.ID_Proprietario })'>
                    <button type="button" class="btn btn-danger btn-cons">Bloquear proprietário</button>
                </a>
            }

            @if (item.Estado == 2)
            {
                <a href='@Url.Action("DesloquearUtilizadorprop", "AdministracaoUtilizadores", new { id = item.ID_Proprietario })'>
                    <button type="button" class="btn btn-success">Desbloquear Utilizador</button>
                </a>
            }
        </td>
    </tr>
}

</table>



